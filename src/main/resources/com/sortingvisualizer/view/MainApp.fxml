<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?scenebuilder-stylesheet com.sortingvisualizer.view.style.css?>


<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sortingvisualizer.controller.SortingVisualizerController" spacing="20" style="-fx-padding: 20;">
    <HBox spacing="10">
        <Label fx:id="statusLabel" styleClass="status-label"/>
    </HBox>
    <Pane fx:id="canvasContainer" VBox.vgrow="ALWAYS" styleClass="canvas-pane"/>
    <HBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="15" styleClass="control-pane">
            <Label text="Slow" styleClass="speed-label"/>
            <Slider fx:id="speedSlider" prefWidth="200"/>
            <Label text="Fast" styleClass="speed-label"/>
        </HBox>
        <ComboBox fx:id="selectAlgorithmComboBox" prefWidth="150"/>
        <Button text="Start Sort" fx:id="startButton" styleClass="control-button"/>
        <Button text="Reset" fx:id="resetButton" styleClass="control-button"/>
        <Button text="Stop" fx:id="stopButton" styleClass="control-button"/>
    </HBox>
</VBox>







