<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Label?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sortingvisualizer.controller.SortingVisualizerController" spacing="10">
    <HBox spacing="10">
    <Label fx:id="statusLabel"/>
    </HBox>
    <Pane fx:id="canvasContainer" VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER" spacing="10" >
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Label text="Slow" style="-fx-font-size: 12px;"/>
            <Slider fx:id="speedSlider" />
            <Label text="Fast" style="-fx-font-size: 12px;"/>
        </HBox>
        <ComboBox fx:id="selectAlgorithmComboBox" />
        <Button text="Start Sort" fx:id="startButton"/>
        <Button text="Reset" fx:id="resetButton"/>
        <Button text="Stop" fx:id="stopButton"/>
    </HBox>
</VBox>
